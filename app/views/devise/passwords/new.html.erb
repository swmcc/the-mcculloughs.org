
<% content_for(:auth_header) do %>
<h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Forgot your password?</h2>
<% end %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }, html: { method: :post, class: "space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email, class: label_class %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: form_button_class %>
  </div>
<% end %>
<%#= render "devise/shared/links" %>
